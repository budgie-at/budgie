{
    "name": "@suuudokuuu/root",
    "version": "1.18.0",
    "description": "suudokuuu platform",
    "license": "MIT",
    "author": "Vitalii Yehorov",
    "private": true,
    "workspaces": [
        "packages/*",
        "utils/*",
        "tests/*"
    ],
    "scripts": {
        "build": "turbo run build",
        "build:force": "turbo run build --force",
        "cpd": "jscpd --pattern \"**/*.{ts,tsx}\"",
        "deadcode": "knip",
        "format": "prettier --write \"**/*.{ts,tsx}\"",
        "lint": "turbo run lint",
        "lint:force": "turbo run lint --force",
        "release": "release-it --ci",
        "test": "jest",
        "test:coverage": "jest --coverage",
        "ts": "turbo run ts",
        "ts:force": "turbo run ts --force"
    },
    "resolutions": {
        "redux-persist@^6.0.0": "patch:redux-persist@npm%3A6.0.0#./.yarn/patches/redux-persist-npm-6.0.0-56dad69feb.patch"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.8.1",
        "@commitlint/config-conventional": "^19.8.1",
        "@jest/globals": "^29.5.0",
        "@release-it/conventional-changelog": "^9.0.4",
        "@types/node": "^22.16.5",
        "@typescript-eslint/eslint-plugin": "^8.37.0",
        "@typescript-eslint/parser": "^8.37.0",
        "babel-jest": "^29.5.0",
        "eslint": "^8.57.1",
        "eslint-import-resolver-typescript": "^4.4.4",
        "eslint-plugin-eslint-comments": "^3.2.0",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-jest": "^29.0.1",
        "eslint-plugin-n": "^17.21.0",
        "eslint-plugin-promise": "^7.2.1",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-compiler": "^19.1.0-rc.2",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-native": "^5.0.0",
        "eslint-plugin-rxjs": "^5.0.3",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "eslint-plugin-standard": "^5.0.0",
        "husky": "^9.1.7",
        "jest": "~29.7.0",
        "jscpd": "^4.0.5",
        "knip": "^5.62.0",
        "lint-staged": "^16.1.2",
        "prettier": "^3.6.2",
        "release-it": "^17.11.0",
        "sort-package-json": "^3.4.0",
        "turbo": "^2.5.5",
        "typescript": "^5.8.3"
    },
    "packageManager": "yarn@4.9.2"
}
